---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../../../layouts/BlogPost.astro'; // 注意：多了一層 ../

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts
		.filter((post) => post.id.endsWith('indexen'))
		.map((post) => ({
			// 將 my-first-post/indexen 轉為 my-first-post
			params: { slug: post.id.replace('/indexen', '') },
			props: post,
		}));
}
type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await render(post);
---

<BlogPost {...post.data}>
	<Content />
</BlogPost>